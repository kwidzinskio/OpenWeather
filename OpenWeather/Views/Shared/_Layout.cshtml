<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WeatherInfo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OpenWeather.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar fixed-top">
           <div class="container">
                <p asp-controller="Home" asp-action="Index">Weather<span class="navbar-title">Info</span></p>
           </div>
        </nav>
    </header>
    <main>
        <div class="content-box">
            @RenderBody()
        </div>
    </main>
</body>
<footer>
    <div class="footer">
        <div>Data provided by <a href="https://openweathermap.org/">OpenWeather</a> and <a href="https://airly.org">Airly</a></div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
